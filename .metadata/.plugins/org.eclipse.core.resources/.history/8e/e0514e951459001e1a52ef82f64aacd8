package 제어문.반복문;

import java.util.Scanner;

public class 반복문확인문제2 {

	public static void main(String[] args) {
		
		
		Scanner sc = new Scanner(System.in);
		
		while (true) {
			System.out.print("숫자입력1 >> ");
			int n1 = sc.nextInt();
			System.out.print("숫자입력2 >> ");
			int n2 = sc.nextInt();
			int nb1 = 0;
			int nb2 = 0;
			if (n1 > n2) {
				System.out.print("앞 숫자가 더 큽니다. 더 하시겠습니까? 종료(x), 계속(o) >>>  ");
				nb1++;
			} else {
				System.out.print("뒷 숫자가 더 큽니다. 더 하시겠습니까? 종료(x), 계속(o) >>>  ");
				nb2++;
			}
			String repeat = sc.next();
			if (repeat.equals("x")) {
				System.out.println("게임을 종료합니다.!!");
				System.out.println("앞이 큰 경우는 "+nb1+"회");
				System.out.println("뒤가 큰 경우는 "+nb2+"회");
				break;
			} 
		}
		
	}

}
