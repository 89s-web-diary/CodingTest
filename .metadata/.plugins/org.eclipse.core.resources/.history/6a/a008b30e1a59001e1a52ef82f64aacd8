package 제어문.반복문;

import java.util.Random;

import javax.swing.JOptionPane;

public class 가위바위보 {

	public static void main(String[] args) {
		
		Random r = new Random();
		int com = r.nextInt(3);
		
		String me = JOptionPane.showInputDialog("가위:0  바위:1  보:2");
		int my = Integer.parseInt(me);
		
		if(my == 0) {
			if (com == 0) {
				JOptionPane.showMessageDialog(null, "무승부입니다.");
			}else if(com == 1) {
				JOptionPane.showMessageDialog(null, "당신이 졌습니다.");				
			}else
				JOptionPane.showMessageDialog(null, "당신이 이겼습니다.");
		}else if(my == 1){
			if (com == 0) {
				JOptionPane.showMessageDialog(null, "당신이 이겼습니다.");
			}else if(com == 1) {
				JOptionPane.showMessageDialog(null, "무승부입니다.");
			}else
				JOptionPane.showMessageDialog(null, "당신이 졌습니다.");				
		}else if(my == 2){
			if (com == 0) {
				JOptionPane.showMessageDialog(null, "당신이 졌습니다.");				
			}else if(com == 1) {
				JOptionPane.showMessageDialog(null, "당신이 이겼습니다.");
			}else
				JOptionPane.showMessageDialog(null, "무승부입니다.");
		}else {
			JOptionPane.showMessageDialog(null, "0,1,2 중에 선택하십시오");
		}
		
	}

}
