package 제어문.조건문;

import java.util.Date;

public class Date확인문제2 {

	public static void main(String[] args) {
		
		Date date = new Date();
		
		int day = date.getDay();
		
		if(day < 6 && day > 0) {
			System.out.println("쉬~~~~~~~~~~~~~~~~자");
		}else {
			System.out.println("열~심히 공부하자");
		}
		
	}

}
