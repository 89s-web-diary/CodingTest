package 연습;

import javax.swing.JOptionPane;

public class Prc3 {

	public static void main(String[] args) {

		double pi = 3.14;
		String input = JOptionPane.showInputDialog("원의 반지름을 입력하세요");
		double r = Double.parseDouble(input);

		double area = pi * r * r;

		JOptionPane.showMessageDialog(null, "원의 넓이는 " + area);
		

	}

}